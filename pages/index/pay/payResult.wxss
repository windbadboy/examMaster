/* pages/index/pay/pay.wxss */

.pay-container {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.pay-title {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
  color: #666;
  font-size: 18px;
  padding-bottom: 10px;
}

.pay-order {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #ccc;
  color: #999;
  font-size: 14px;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 10px;
}

.fee {
  color: orange;
}
